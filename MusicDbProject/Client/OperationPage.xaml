<Page x:Class="Client.OperationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="OperationPage"
      Background="#03396c">

    <Grid>
        <Button Click="addArtist_Click" Cursor="Hand" Name="addArtist" Margin="0,-120,0,0" Width="250" Height="100" HorizontalAlignment="Center" Background="#005b96"  BorderThickness="5" BorderBrush="#b3cde0">
            <Button.Content>
                <TextBlock Foreground="#b3cde0" FontFamily="Segoe UI Semibold" FontSize="30">Add Artist</TextBlock>
            </Button.Content>
        </Button>
        <Button  Cursor="Hand" Name="allArtists" Margin="0,120,0,0" Width="250" Height="100" HorizontalAlignment="Center" Background="#005b96"  BorderThickness="5" BorderBrush="#b3cde0">
            <Button.Content>
                <TextBlock Foreground="#b3cde0" FontFamily="Segoe UI Semibold" FontSize="30">View All Artists</TextBlock>
            </Button.Content>
        </Button>
    </Grid>
</Page>
