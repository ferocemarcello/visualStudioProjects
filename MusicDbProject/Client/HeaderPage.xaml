<Page x:Class="Client.HeaderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="HeaderPage"
      >
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="./header_image.png"></ImageBrush>
        </Grid.Background>
        <Button Click="Operation_Home_Click" Cursor="Hand">
            <Button.Template>
                <ControlTemplate>
                    <Image HorizontalAlignment="Left" Source="./home_logo.png" Height="100" Width="100" Margin="20,0,0,0"></Image>
                </ControlTemplate>
            </Button.Template></Button>
        <Button Click="Home_Click" Cursor="Hand">
            <Button.Template>
                <ControlTemplate>
                    <Image HorizontalAlignment="Center" Source="./musicconnectmodified.png" Height="100" Width="100" Margin="888,0,0,0"></Image>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Foreground="White" FontFamily="Segoe UI Semibold" FontSize="80" VerticalAlignment="Center" HorizontalAlignment="Center">Music Database</TextBlock>
    </Grid>
</Page>
